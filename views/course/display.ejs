<%- include('../header.ejs') %>

<h1 class="text-white">display</h1>
<div class="container mt-5">
    <table class="table table-bordered">
        <tr>
            <th>S.No</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>STATUS</th>
            <th>COMMENT</th>
            <th>ACTION</th>
        </tr>
        <% i=1 %>
        <% d.forEach((item)=>{%>
            <tr>
                <td><%= i++ %></td>
                <td><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.phone %></td>
                <td><%= item.status %></td>
                <td><%= item.comment %></td>
                <td>
                    <a href="/view/<%=item._id %>" class="btn btn-info">view</a>
                    <a href="/edit/<%=item._id %>" class="btn btn-success">edit</a>
                    <!-- <a href="/delete/<%=item._id %>" class="btn btn-danger">delete</a> -->
                </td>
            </tr>
        <% }) %>
        
    </table>
</div>
<%- include('../footer.ejs') %>