<%- include('./header.ejs')%>
<img class="w-100" src="image/BITS-12.jpg" alt="">
    <div class="container">
        <h1 class="text-center mt-4 mb-4 heading">Available Courses</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-lg mb-4">
